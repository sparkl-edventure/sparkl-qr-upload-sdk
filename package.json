{
  "name": "qr-upload-sdk",
  "version": "0.1.0",
  "type": "module",
  "main": "dist/index.cjs",
  "module": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "require": "./dist/index.cjs",
      "types": "./dist/index.d.ts"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "lint": "eslint 'src/**/*.ts'",
    "test": "vitest",
    "typecheck": "tsc --noEmit",
    "prepare": "npm run build"
  },
  "keywords": [
    "qr",
    "upload",
    "sdk",
    "photo",
    "capture"
  ],
  "author": "",
  "license": "MIT",
  "description": "A lightweight SDK for QR-based photo capture and upload flows",
  "dependencies": {
    "@types/uuid": "^10.0.0",
    "axios": "^1.11.0",
    "qrcode": "^1.5.4",
    "socket.io-client": "^4.8.1",
    "sortablejs": "^1.15.6",
    "uuid": "^11.1.0"
  },
  "devDependencies": {
    "@types/node": "^20.10.5",
    "@types/qrcode": "^1.5.3",
    "@types/sortablejs": "^1.15.8",
    "@typescript-eslint/eslint-plugin": "^6.13.2",
    "@typescript-eslint/parser": "^6.13.2",
    "eslint": "^8.55.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.1.2",
    "prettier": "^3.1.1",
    "tsup": "^8.5.0",
    "typescript": "^5.3.3",
    "vitest": "^1.1.0"
  }
}
